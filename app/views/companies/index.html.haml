- model_class = Company
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-hover
  %thead
    %tr
      - if user_signed_in?
        / %th=t '.actions.edit', :default => t("helpers.actions.edit")
      / %th= model_class.human_attribute_name(:created_at)
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:name)
      / %th= model_class.human_attribute_name(:client_type)
      / %th= model_class.human_attribute_name(:client_state)
      / %th= model_class.human_attribute_name(:client_category_id)
      / %th= model_class.human_attribute_name(:phone_nr)
      / %th= model_class.human_attribute_name(:fax_nr)
      / %th= model_class.human_attribute_name(:email)
      / %th= model_class.human_attribute_name(:legal_index)
      / %th= model_class.human_attribute_name(:legal_city)
      / %th= model_class.human_attribute_name(:legal_street)
      / %th= model_class.human_attribute_name(:legal_street_nr)
      / - if user_signed_in?
      /   %th=t '.actions.delete', :default => t("helpers.actions.delete")
  %tbody
    - @companies.each do |company|
      %tr
        / - if current_user
        /   %td
        /     = link_to image_tag("tbl_edit.png"), edit_company_path(company)
        / %td= company.created_at.strftime("%d/%m/%Y %H:%M")
        %td= company.id
        %td= link_to company.name, company_path(company)
        / %td= Company::CLIENT_TYPE[company.client_type]
        / %td= Company::CLIENT_STATE[company.client_state]
        / %td= company.phone_nr
        / %td= company.fax_nr
        / %td= company.email
        / %td= company.legal_index
        / %td= company.legal_city
        / %td= company.legal_street
        / %td= company.legal_street_nr
        - if user_signed_in?
          %td
            / = link_to t('.destroy', :default => t("helpers.links.destroy")), company_path(company), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

/ - if user_signed_in?
/   = link_to t('.new', :default => t("helpers.links.new")), new_company_path, :class => 'btn btn-primary'
