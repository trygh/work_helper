- model_class = Task
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
  = link_to t('.new', :default => t("helpers.links.new")), new_task_path, :class => 'btn btn-primary'
%table.table.table-hover
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:title)
      %th= model_class.human_attribute_name(:url)
      %th= model_class.human_attribute_name(:user_id)
      %th= model_class.human_attribute_name(:project_id)
      %th= model_class.human_attribute_name(:minutes)
      / %th= model_class.human_attribute_name(:created_at)
      %th= model_class.human_attribute_name(:reported_for)
      / %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @tasks.each do |task|
      %tr
        %td= task.id
        %td= link_to task.title, task_path(task)
        %td= link_to truncate(task.url, omision: "...", length: 50), task.url, target: "_blank", title: task.url
        %td
          = task.user.first_name
          = task.user.last_name
        %td= task.project.name
        %td= task.minutes
        / %td= task.created_at.strftime("%d/%m/%Y")
        %td= l task.reported_for, format: :long
        %td
          - if user_signed_in?
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_task_path(task), :class => 'btn btn-mini'
            = link_to t('.destroy', :default => t("helpers.links.destroy")), task_path(task), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
