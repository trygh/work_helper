- model_class = Task
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:title) + ':'
  %br
  = @task.title
%p
  %strong= model_class.human_attribute_name(:content) + ':'
  %br
  = @task.content
%p
  %strong= model_class.human_attribute_name(:url) + ':'
  %br
  = link_to @task.url, @task.url, target: "_blank"
%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @task.user_id
%p
  %strong= model_class.human_attribute_name(:project_id) + ':'
  %br
  = @task.project_id
%p
  %strong= model_class.human_attribute_name(:minutes) + ':'
  %br
  = @task.minutes
%p
  %strong= model_class.human_attribute_name(:reported_for) + ':'
  %br
  = @task.reported_for.strftime("%d/%m/%Y")

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), tasks_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_task_path(@task), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), task_path(@task), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
