= form_for @company, :html => { :class => 'form-horizontal' } do |f|
  .row-fluid
    .span6
      .control-group
        = f.label :name, class: 'control-label'
        .controls
          = f.text_field :name, class: 'text_field'
      .control-group
        = f.label :contract_nr, class: 'control-label'
        .controls
          = f.text_field :contract_nr, class: 'text_field'
      .control-group
        = f.label :industry, class: 'control-label'
        .controls
          = f.select :industry, Company::INDUSTRY.invert.map{|t| t }, include_blank: "Select Industry", class: 'select_field'
      .control-group
        = f.label :source, class: 'control-label'
        .controls
          = f.select :source, Company::SOURCE.invert.map{|t| t }, include_blank: "Select Source", class: 'select_field'
      .control-group
        = f.label :client_type, class: 'control-label'
        .controls
          = f.select :client_type, Company::CLIENT_TYPE.invert.map{|t| t }, include_blank: "Select Client Type", class: 'select_field'
      .control-group
        = f.label :client_category_id, class: 'control-label'
        .controls
          = f.collection_select :client_category_id, ClientCategory.find(:all), :id, :name, :prompt => "Select a Category", class: 'select_field'
      .control-group
        = f.label :client_state, class: 'control-label'
        .controls
          = f.select :client_state, Company::CLIENT_STATE.invert.map{|t| t }, include_blank: "Select Client State", class: 'select_field'
      .control-group
        = f.label :phone_nr, class: 'control-label'
        .controls
          = f.text_field :phone_nr, class: 'text_field'
      .control-group
        = f.label :fax_nr, class: 'control-label'
        .controls
          = f.text_field :fax_nr, class: 'text_field'
      .control-group
        = f.label :email, class: 'control-label'
        .controls
          = f.email_field :email, class: 'text_field'
      .control-group
        = f.label :skype_id, class: 'control-label'
        .controls
          = f.text_field :skype_id, class: 'text_field'
      .control-group
        = f.label :website_url, class: 'control-label'
        .controls
          = f.text_field :website_url, class: 'text_field'
    .span6
      .control-group
        = f.label :facebook_id, class: 'control-label'
        .controls
          = f.text_field :facebook_id, class: 'text_field'
      .control-group
        = f.label :legal_country, class: 'control-label'
        .controls
          = f.country_select("legal_country", [ "Moldova, Republic of", "Romania", "Ukraine" ])
      .control-group
        = f.label :legal_city, class: 'control-label'
        .controls
          = f.text_field :legal_city, class: 'text_field'
      .control-group
        = f.label :legal_index, class: 'control-label'
        .controls
          = f.text_field :legal_index, class: 'text_field'
      .control-group
        = f.label :legal_street, class: 'control-label'
        .controls
          = f.text_field :legal_street, class: 'text_field'
      .control-group
        = f.label :legal_street_nr, class: 'control-label'
        .controls
          = f.text_field :legal_street_nr, class: 'text_field'
      .control-group
        = f.label :billing_country, class: 'control-label'
        .controls
          = f.country_select("billing_country", [ "Moldova, Republic of", "Romania", "Ukraine" ])
      .control-group
        = f.label :billing_city, class: 'control-label'
        .controls
          = f.text_field :billing_city, class: 'text_field'
      .control-group
        = f.label :billing_street, class: 'control-label'
        .controls
          = f.text_field :billing_street, class: 'text_field'
      .control-group
        = f.label :billing_street_nr, class: 'control-label'
        .controls
          = f.text_field :billing_street_nr, class: 'text_field'
      .control-group
        = f.label :employer_count, class: 'control-label'
        .controls
          = f.text_field :employer_count, class: 'text_field'
      .control-group
        = f.label :activity_type, class: 'control-label'
        .controls
          = f.text_field :activity_type, class: 'text_field'
  .row-fluid
    .span12
      .form-actions
        = f.submit nil, class: 'btn btn-primary'
        = link_to t('.cancel', default: t("helpers.links.cancel")), companies_path, class: 'btn'
