    %h3#myModalLabel
      Assign worker to company
      #flash
    - if @your_workers.blank?
      %h4 You have no workers in your company
    - else
      = form_for :worker, url: assign_worker_path, :html => { :class => 'form-horizontal' } do |f|
        .modal-body
          %p
            = f.collection_select :user_id, @your_workers.all, :user_id, :user_name, prompt: "Select user"
          %p
            = f.collection_select :buyer_id, Company.all, :id, :name, prompt: "Select company"
          %p
            = f.text_field :hourly_rate, placeholder: "Hour rate"
            = hidden_field_tag :seller_id, @company.id
        .modal-footer
          = f.submit "Assign worker", :class => 'btn btn-primary'
